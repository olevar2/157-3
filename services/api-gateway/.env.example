# API Gateway Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-in-production
JWT_EXPIRES_IN=24h

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
TRADING_SERVICE_URL=http://localhost:3003
MARKET_DATA_SERVICE_URL=http://localhost:3004

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# API Keys for Service-to-Service Communication
VALID_API_KEYS=gateway-key-1,gateway-key-2,service-internal-key

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=50
TRADING_RATE_LIMIT_MAX=100
MARKET_DATA_RATE_LIMIT_MAX=200

# Security Configuration
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
TRUST_PROXY=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=3000
HEALTH_CHECK_INTERVAL=30000
