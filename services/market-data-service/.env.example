# Market Data Service Environment Configuration

# Server Configuration
PORT=3004
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=platform3_market_data
DB_USER=postgres
DB_PASSWORD=password

# WebSocket Configuration
WS_PORT=8080
WS_HEARTBEAT_INTERVAL=30000

# Market Data Configuration
PRICE_UPDATE_INTERVAL=10000
HISTORICAL_DATA_RETENTION_DAYS=30
MAX_CLIENTS_PER_IP=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=300
WS_RATE_LIMIT_MAX_CONNECTIONS=10

# External Data Sources (for future integration)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FOREX_API_KEY=your_forex_api_key
TWELVE_DATA_API_KEY=your_twelve_data_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/market-data-service.log

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Service Discovery
TRADING_SERVICE_URL=http://localhost:3003
AI_DASHBOARD_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
