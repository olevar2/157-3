{
  "scripts": {
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:config": "./scripts/test-config-system.sh",
    "setup:dev": "./infrastructure/setup-dev-environment.sh",
    "validate:config": "npm run test:integration && npm run test:config",
    "validate:production": "./scripts/production-validation.sh"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "axios": "^1.9.0",
    "jest": "^29.5.0",
    "pg": "^8.16.0",
    "redis": "^5.1.0",
    "ts-jest": "^29.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
